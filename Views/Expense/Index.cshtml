@model IEnumerable<ExpenseTracker.Models.Expense>



<div>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-primary">Expenses</h2>
            </div>
            <div class="col-md-6 text-right">
                <a class="btn btn-primary text-right" role="button"  asp-controller="Expense" asp-action="Create">add a new item</a>
            </div>
        </div>
    </div>

   
    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Expense Name
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        Expense Type
                    </th>
                    <th>
                        Changes
                    </th>

                </tr>
            </thead>
            <tbody>

           
            @foreach (var expense in Model)
            {
                <tr>
                    <td width="20%">@expense.ExpenseName</td>
                    <td width="20%">@expense.Amount</td>
                    <td width="20%">@expense.ExpenseType.Name</td>
                    <td width="36%">
                        <a class="btn btn-primary mx-1" role="button" asp-controller="Expense" asp-action="Update" asp-route-Id="@expense.Id">Update</a>
                        <a class="btn btn-danger mx-1" role="button" asp-controller="Expense" asp-action="Delete" asp-route-Id="@expense.Id">Delete</a>

                    </td>

                </tr>
            }
            </tbody>
        </table>

        <div><h1 class="text-">Total : £@Model.Sum(i => i.Amount)</h1></div>

    }
    else
    {
        <p>No items created yet</p>
    }

</div>