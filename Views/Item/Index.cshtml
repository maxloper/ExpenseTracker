@model IEnumerable<ExpenseTracker.Models.Item>


<div>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-primary">Borrowed Items</h2>
            </div>
            <div class="col-md-6 text-right">
                <a class="btn btn-primary" role="button"  asp-controller="Item" asp-action="Create">add a new item</a>
            </div>
        </div>
    </div>

   
    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Item name
                    </th>
                    <th>
                        name
                    </th>
                    <th>
                        Lender
                    </th>

                </tr>
            </thead>
            <tbody>

           
            @foreach (var item in Model)
            {
                <tr>
                    <td width="30%">@item.ItemName</td>
                    <td width="30%">@item.Borrower</td>
                    <td width="30%">@item.Lender</td>

                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet</p>
    }

</div>